<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<navigation-rule>
		<from-view-id>/pages/public/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/private/home.xhtml?faces-redirect=true</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/pages/public/login.xhtml?faces-redirect=true</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>submit_job</from-outcome>
			<to-view-id>/pages/private/submit_job.xhtml?faces-redirect=true</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>file_list</from-outcome>
			<to-view-id>/pages/private/file_list.xhtml?faces-redirect=true</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>download_file</from-outcome>
			<to-view-id>/pages/private/download_file.xhtml?faces-redirect=true</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
</faces-config>
